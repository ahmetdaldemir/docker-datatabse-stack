# Global Database Stack Configuration
# Copy this file to .env and adjust values for your environment

# Network Configuration
NETWORK_NAME=global_databases_network

# MySQL Configuration
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=dev_db
MYSQL_USER=dev_user
MYSQL_PASSWORD=dev_pass

# PostgreSQL Configuration
POSTGRES_DB=dev_db
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=dev_pass

# Redis Configuration
REDIS_PASSWORD=dev_pass

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin_pass
MONGO_DATABASE=dev_db

# Elasticsearch Configuration
ES_JAVA_OPTS=-Xms512m -Xmx512m

# Port Configuration (for production, you might want to change these)
MYSQL_PORT=3306
POSTGRES_PORT=5432
REDIS_PORT=6379
MONGO_PORT=27017
ELASTICSEARCH_HTTP_PORT=9200
ELASTICSEARCH_TRANSPORT_PORT=9300

# GUI Ports
PHPMYADMIN_PORT=8081
REDIS_COMMANDER_PORT=8082
MONGO_EXPRESS_PORT=8083
ADMINER_PORT=8084

# Production Settings
ENVIRONMENT=development
# Set to 'production' for production environment
# ENVIRONMENT=production
