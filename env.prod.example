# Production Environment Configuration
# Copy this file to .env for production deployment

# Network Configuration
NETWORK_NAME=global_databases_network

# MySQL Configuration - PRODUCTION VALUES
MYSQL_ROOT_PASSWORD=your_strong_root_password_here
MYSQL_DATABASE=production_db
MYSQL_USER=prod_user
MYSQL_PASSWORD=your_strong_password_here

# PostgreSQL Configuration - PRODUCTION VALUES
POSTGRES_DB=production_db
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=your_strong_password_here

# Redis Configuration - PRODUCTION VALUES
REDIS_PASSWORD=your_strong_redis_password_here

# MongoDB Configuration - PRODUCTION VALUES
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_strong_mongo_password_here
MONGO_DATABASE=production_db

# Elasticsearch Configuration
ES_JAVA_OPTS=-Xms1g -Xmx1g

# Port Configuration (Production - use different ports for security)
MYSQL_PORT=3306
POSTGRES_PORT=5432
REDIS_PORT=6379
MONGO_PORT=27017
ELASTICSEARCH_HTTP_PORT=9200
ELASTICSEARCH_TRANSPORT_PORT=9300

# GUI Ports (Only enable if needed in production)
PHPMYADMIN_PORT=8081
REDIS_COMMANDER_PORT=8082
MONGO_EXPRESS_PORT=8083
ADMINER_PORT=8084

# Production Settings
ENVIRONMENT=production
